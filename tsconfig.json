{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,
    "allowJs": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "~/*": [
        "./*"
      ],
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "template"
  ]
}
